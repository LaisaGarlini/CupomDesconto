@model IEnumerable<CupomDesconto.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1>Usuários</h1>

<p>
    <a asp-action="Create" class="cadastrarBotao">Cadastrar usuários</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Senha)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Senha)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="cadastrarBotao">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="cadastrarBotao">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="cadastrarBotao">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
